<?xml version="1.0" encoding="UTF-8"?>
<Terrain>
	<!--
		TileVertexWidth and TileVertexHeight are height map size
		TileVertexWidth:2^n+1
		TileVertexHeight:2^n+1

		PatchCellWidth and PatchCellHeight:for tessellation, one patch size
		PatchCellWidth:2^n
		PatchCellHeight:2^n
	-->
	<Info Horiz="1" Vert="1" CellSpace="0.5" TileVertexWidth="2049" TileVertexHeight="2049" HeightScale="50.0"/>

	<TileList>
		<Tile HeightMap="terrain.raw">
			<HeightMap>
				<Texture File="terrain.raw" ShaderParam="gHeightMap"/>
			</HeightMap>
			<Layers>
				<Texture File="bricks.dds" ShaderParam="gTextureGrass"/>
				<Texture File="darkdirt.dds" ShaderParam="gTextureDarkDirt"/>
				<Texture File="stone.dds" ShaderParam="gTextureStone"/>
				<Texture File="lightdirt.dds" ShaderParam="gTextureLightDirt"/>
				<Texture File="snow.dds" ShaderParam="gTextureSnow"/>
				<Texture File="bricks_nmap.dds" ShaderParam="gNormalMap"/>
			</Layers>
			<Blend>
				<Texture File="blend.dds" ShaderParam="gTextureBlend"/>
			</Blend>
		</Tile>
	</TileList>
</Terrain>